{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "@/*": [
        "./resources/js/*"
      ]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}